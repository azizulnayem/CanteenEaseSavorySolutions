<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="663.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HomepageController">
   <children>
      <ImageView fitHeight="500.0" fitWidth="647.0" layoutX="7.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@canteen.jpg" />
         </image>
         <viewport>
            <Rectangle2D minX="700.0" />
         </viewport>
      </ImageView>
      <VBox alignment="TOP_CENTER" layoutX="85.0" layoutY="41.0" prefHeight="402.0" prefWidth="497.0" spacing="30.0">
         <children>
            <Label lineSpacing="30.0" prefHeight="71.0" prefWidth="495.0" text="Welcome To UIU Canteen" textAlignment="CENTER">
               <font>
                  <Font name="Calibri Bold Italic" size="40.0" />
               </font>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" />
               </padding>
               <textFill>
                  <LinearGradient endX="1.0" endY="1.0">
                     <stops>
                        <Stop>
                           <color>
                              <Color red="1.0" green="0.6470588445663452" />
                           </color>
                        </Stop>
                        <Stop offset="1.0">
                           <color>
                              <Color red="1.0" green="0.4959796965122223" />
                           </color>
                        </Stop>
                     </stops>
                  </LinearGradient>
               </textFill>
            </Label>
            <Button mnemonicParsing="false" onAction="#adminbuttonpushed" style="-fx-background-color: #3498db; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-width: 2; -fx-border-color: #2980b9;" text="Admin" textFill="WHITE">
               <font>
                  <Font name="System Bold Italic" size="30.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#customerbuttonpushed" style="-fx-background-color: #e74c3c; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-width: 2; -fx-border-color: #c0392b;" text="Customer" textFill="WHITE">
               <font>
                  <Font name="System Bold Italic" size="30.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
